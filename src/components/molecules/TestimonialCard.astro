---
import Typography from '@atoms/Typography.astro'
import type { Testimony } from '../../types/types.ts'
interface Props extends Testimony {}

const { logo, testimonyTitle, testimony, companyName, name, rate, date, class: className } = Astro.props
---

<li class:list={['flex w-full max-w-[450px] flex-col items-center justify-center rounded-t-[20px]', className]}>
  {
    !!logo && (
      <div class="flex w-full items-center justify-center rounded-t-[20px] bg-blue p-5 text-center text-white ">
        <img class="" src={`${logo}`} />
      </div>
    )
  }

  <div class="flex flex-col gap-5 bg-white p-4">
    <div class="flex flex-col items-end">
      {
        rate && (
          <div class="flex flex-row gap-1">
            {[...Array(rate).keys()].map(() => (
              <svg width="16" height="15" viewBox="0 0 16 15" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path
                  d="M7.04894 0.92705C7.3483 0.00573921 8.6517 0.00573969 8.95106 0.92705L10.0206 4.21885C10.1545 4.63087 10.5385 4.90983 10.9717 4.90983H14.4329C15.4016 4.90983 15.8044 6.14945 15.0207 6.71885L12.2205 8.75329C11.87 9.00793 11.7234 9.4593 11.8572 9.87132L12.9268 13.1631C13.2261 14.0844 12.1717 14.8506 11.388 14.2812L8.58778 12.2467C8.2373 11.9921 7.7627 11.9921 7.41221 12.2467L4.61204 14.2812C3.82833 14.8506 2.77385 14.0844 3.0732 13.1631L4.14277 9.87132C4.27665 9.4593 4.12999 9.00793 3.7795 8.75329L0.979333 6.71885C0.195619 6.14945 0.598395 4.90983 1.56712 4.90983H5.02832C5.46154 4.90983 5.8455 4.63087 5.97937 4.21885L7.04894 0.92705Z"
                  fill="#FFD600"
                />
              </svg>
            ))}

            <Typography as="label" variant="small" color="black" class="font-light">
              {rate}
            </Typography>
          </div>
        )
      }
      {
        date && (
          <Typography as="label" variant="small" color="black" class="font-light">
            {date}
          </Typography>
        )
      }
    </div>
    <Typography as="h4" variant="body" color="black" class="font-semibold">
      {testimonyTitle}
    </Typography>

    <Typography as="p" variant="medium" class="bg-red" color="black">
      {testimony}
    </Typography>

    {
      (companyName || name) && (
        <div class="flex flex-col items-start">
          {companyName && (
            <Typography as="label" variant="medium" color="black">
              {companyName}
            </Typography>
          )}

          {name && (
            <Typography as="label" variant="medium" color="black" class="text-light-grey">
              {name}
            </Typography>
          )}
        </div>
      )
    }
  </div>
</li>
