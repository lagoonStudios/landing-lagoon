---
import type { Testimony } from '@types/types.ts'
import TestimonialCard from './TestimonialCard.astro'
interface Props extends Testimony {}
const { logo, testimonyTitle, testimony, companyName, name, rate, date, class: className } = Astro.props
---

<section class="flex gap-10">
  <div class="flex-1">
    {testimony}
    <div>
      {rate}
    </div>
  </div>
  <div class="flex-1">
    <TestimonialCard
      logo={logo}
      testimonyTitle={testimonyTitle}
      testimony={testimony}
      companyName={companyName}
      name={name}
      rate={rate}
      date={date}
      class={className}
    />
  </div>
</section>
